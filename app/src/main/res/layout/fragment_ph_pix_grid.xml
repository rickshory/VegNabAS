<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f0f0f0">

    <TextView
        android:id="@+id/phPixGridTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
         />

    <Button
        android:id="@+id/placeholder_take_picture_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ph_pix_grid_pic_button_message"
        android:padding="10dp"
        android:layout_alignLeft="@id/phPixGridTitleText"
        android:layout_below="@id/phPixGridTitleText"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/phPixGridRecyView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/placeholder_take_picture_button"
        android:layout_below="@id/placeholder_take_picture_button"
        />

    <GridView
        android:id="@+id/phPixGridView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:columnWidth="100dp"
        android:drawSelectorOnTop="true"
        android:gravity="center"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="5dp"
        android:focusable="true"
        android:clickable="true"
        android:layout_alignLeft="@id/placeholder_take_picture_button"
        android:layout_below="@id/placeholder_take_picture_button"
        />

</RelativeLayout>