<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollViewHd"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

<RelativeLayout
    android:id="@+id/donate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <TextView
        android:id="@+id/donate_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/donate_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:paddingBottom="10dp"/>

    <TextView
        android:id="@+id/donate_header"
        android:text="@string/donate_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/donate_title_text"
        android:layout_below="@id/donate_title_text"
        android:paddingBottom="10dp"
        />

    <TextView
        android:id="@+id/donate_header2"
        android:text="@string/donate_header2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/donate_header"
        android:layout_below="@id/donate_header"
        android:paddingBottom="10dp"
        />

    <RadioGroup
        android:id="@+id/radio_group_opts_donation_amts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@id/donate_header2"
        android:layout_below="@id/donate_header2"
        android:checkedButton="@+id/radio_amt_usd001_00">

        <RadioButton android:id="@+id/radio_amt_usd001_00"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="@string/donate_amount_text_usd001_00"
            />
        <RadioButton android:id="@+id/radio_amt_usd003_00"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="@string/donate_amount_text_usd003_00"
            />
        <RadioButton android:id="@+id/radio_amt_usd010_00"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="@string/donate_amount_text_usd010_00"
            />
        <RadioButton android:id="@+id/radio_amt_usd030_00"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="@string/donate_amount_text_usd030_00"
            />
    </RadioGroup>

    <Button
        android:id="@+id/donate_go_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/donate_button_text"
        android:padding="10dp"
        android:layout_alignLeft="@id/radio_group_opts_donation_amts"
        android:layout_below="@id/radio_group_opts_donation_amts"
        />
</RelativeLayout>
</ScrollView>
