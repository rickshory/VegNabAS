<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollViewHd"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

<RelativeLayout
    android:id="@+id/donate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <TextView
        android:id="@+id/donate_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/donate_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:paddingBottom="20dp"/>

    <TextView
        android:id="@+id/donate_header1_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/donate_header1"
        android:layout_alignLeft="@id/donate_title_text"
        android:layout_below="@id/donate_title_text"
        android:paddingBottom="10dp"/>

    <TextView
        android:id="@+id/donate_header2_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/donate_header2"
        android:layout_alignLeft="@id/donate_header1_text"
        android:layout_below="@id/donate_header1_text"
        android:paddingBottom="20dp"/>

    <Spinner
        android:id="@+id/donations_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/donate_header2_text"
        android:layout_below="@id/donate_header2_text"
        android:prompt="@string/donate_hint"
        />

    <Button
        android:id="@+id/donate_go_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/donate_button_text"
        android:padding="10dp"
        android:layout_alignLeft="@id/donations_spinner"
        android:layout_below="@id/donations_spinner"
        />

    <TextView
        android:id="@+id/donate_wait"
        android:text="@string/donate_pls_wait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/donate_go_button"
        android:layout_below="@id/donate_go_button"
        android:paddingTop="20dp"
        />
</RelativeLayout>
</ScrollView>
